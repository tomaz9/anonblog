<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Anonblog</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>
  </head>    
  <body>
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-3">Anonblog</h1>
        <p class="lead">Web blog where you can anonymously post anything</p>
      </div>
    </div>
    <div class="container" style="width: 70%;">
      <% blogposts.forEach(function(blogpost) { %>
        <div class="card" style="margin: 5px;">
          <div class="card-block">
            <h4 class="card-title"><%= blogpost.title %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= blogpost.date %></h6>
            <p class="card-text"><%= blogpost.updated_at %>.</p>
          </div>
        </div> 
      <% }); %>
    </div>
  </body>
</html>

<form action="/post" method="post" accept-charset="utf-8">
  <input type="text" name="title" />
  <input type="text" name="content" />
  <input type="submit" value="Submit">
</form>
